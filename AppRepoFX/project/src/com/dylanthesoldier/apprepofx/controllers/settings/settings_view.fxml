<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<fx:root xmlns:fx="http://javafx.com/fxml/1" type="AnchorPane" xmlns="http://javafx.com/javafx/8.0.60">
   <children>
      <TabPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0">
         <tabs>
            <Tab closable="false" text="General">
              <content>
                  <AnchorPane fx:id="apRoot">
                     <children>
                        <CheckBox fx:id="mCB_DebugMode" layoutX="10.0" layoutY="30.0" mnemonicParsing="false" text="Enable Debug Mode" AnchorPane.leftAnchor="10.0" AnchorPane.topAnchor="10.0" />
                        <CheckBox fx:id="mCB_AutoDownload" layoutX="20.0" layoutY="40.0" mnemonicParsing="false" text="Enable Automatic Downloads" AnchorPane.leftAnchor="10.0" AnchorPane.topAnchor="40.0" />
                     </children>
                  </AnchorPane>
              </content>
            </Tab>
            <Tab text="Notifications">
              <content>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
              </content>
            </Tab>
            <Tab text="Email">
              <content>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <VBox prefHeight="200.0" prefWidth="100.0" spacing="10.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
                           <children>
                              <TextField fx:id="mTF_username" prefHeight="25.0" prefWidth="310.0" promptText="Gmail Username" />
                              <PasswordField fx:id="mPF_password" prefHeight="25.0" prefWidth="310.0" promptText="Gmail Password" />
                              <CheckBox fx:id="mCB_defaultEmailer" mnemonicParsing="false" text="Use System's Default Emailing Program" />
                           </children>
                        </VBox>
                     </children>
                  </AnchorPane>
              </content>
            </Tab>
         </tabs>
      </TabPane>
      <Button fx:id="mBtnCancel" text="Cancel" AnchorPane.bottomAnchor="10.0" AnchorPane.rightAnchor="65.0" />
      <Button fx:id="mBtnOkay" text="Okay" AnchorPane.bottomAnchor="10.0" AnchorPane.rightAnchor="10.0" />
   </children>
</fx:root>
